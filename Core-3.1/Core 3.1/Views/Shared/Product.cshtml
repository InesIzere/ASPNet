<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>


    <h2>All Reservations</h2>
    <a asp-action="AddReservation" class="btn btn-sm btn-primary">Add Reservation</a>
    <a asp-action="GetReservation" class="btn btn-sm btn-secondary">Get Reservation</a>

    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>AddressBuilding</th>
                <th>FullNameAdministrator</th>
                <th>EmailAdministrator</th>
                <th>PhoneAdministrator</th>
                <th>FullNameTechnicalContactBuilding</th>
                <th>TechnicalContactBuildingEmail </th>
                <th>TechnicalContactBuildingPhone</th>
                <th>CustomerId</th>
                <th>Customer</th>
                <th>Battery</th>
                <th>BuildingDetails</th>
                <th>Intervention</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>


                    <td>@r.Id</td>
                    <td>@r.AddressBuilding</td>
                    <td>@r.FullNameAdministrator</td>
                    <td>@r.EmailAdministrator</td>
                    <td>@r.PhoneAdministrator</td>
                    <td>@r.FullNameTechnicalContactBuilding</td>
                    <td>@r.TechnicalContactBuildingEmail </td>
                    <td>@r.TechnicalContactBuildingPhone</td>
                    <td>@r.CustomerId</td>
                    <td>@r.Customer</td>
                    <td>@r.Battery</td>
                    <td>@r.BuildingDetails</td>
                    <td>@r.Intervention</td>

                    <td>

                        <a asp-action="UpdateReservation" asp-route-id="@r.Id"></a>
                    </td>

                    <td>
                        <form asp-action="DeleteReservation" method="post">
                            <input type="hidden" value="@r.Id" name="BuildingId" />
                            <input type="image" src="/icon/close.png" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
